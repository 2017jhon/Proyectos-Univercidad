@RenderPage("header.cshtml")
@RenderPage("NavBar.cshtml")
@RenderPage("NavSide.cshtml")

<div id="main-div" class="container-fluid">
    <h1>Consulta de Clientes</h1>
    </br>
    </br>
    <div class="col-lg-offset-0">
  
        <table class="table table-hover table-striped table-condensed"> 
            <tr>
                <th>ID</th>
                <th>NombreCompleto</th>
                <th>Correo Electronico</th>
                <th>Nacionalidad</th>
                <th>Sexo</th>
                <th>Fechade Nacimiento</th>
                <th>Telefono</th>
                <th>Telefonocelular</th>
                
            </tr>
           </div>
            @{
                int x = 0;
            }
            @foreach (var Clientes in DreamCar.VariablesGlobales.listaClientes)
            {
                <form method="post">
                    <tr>
                        <center>
                            <div class="btn-group">
                                <td>  <button type="submit" class="btn btn-default"><i class="fa fa-edit "></i>@Clientes.Id</button></td>
                                <input style="visibility:hidden" type="text" name="btEdit" value="@Clientes.Id" />

                            </div>
                        </center>

                        <td>@Clientes.NombreCompleto</td>
                        <td>@Clientes.Correoelectronico</td>
                        <td>@Clientes.Nacionalidad</td>
                        <td>@Clientes.Sexo</td>
                        <td>@Clientes.FechadeNacimiento</td>
                        <td>@Clientes.Telefono</td>
                        <td>@Clientes.Telefonocelular</td>
                    </tr>
                    @{ 
                        x++;
                    }
                  
                </form>
                        }
            @{
                if (x <= 0)
                {
                    
                    <tr>
                        <td><p>No existen Ningun  Usuario En Nuestra BD</p></td>

                    </tr>
                }
            }


            @{
                if (Request["btEdit"] != null)
                {
                    DreamCar.VariablesGlobales.IdClientes= int.Parse(Request["btEdit"]);
                    Response.Redirect("~/Clientes.cshtml");
                }

            }
    
    </table>
</div>
@RenderPage("footer.cshtml");
