            </fieldset>
            <fieldset>

            </fieldset>

            <div class="row">
                <div class="col-md-6">
                    <fieldset class="form-group">
                        <label> Cliente </label>
                        <input type="text" class="form-control" id="Descripcion" placeholder="Cliente" name="txtCliente">
                        
                    </fieldset>
                    <fieldset class="form-group">
